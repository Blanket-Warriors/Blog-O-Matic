{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "lib": [
      "dom",
      "dom.iterable",
      "es6",
      "scripthost"
    ],
    "module": "commonjs",
    "noImplicitAny": true,
    "paths": {
      "*": [
        "node_modules/*",
        "/node_modules/*"
      ]
    },
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5"
  },
  "exclude": [
    "node_modules",
    "/node_modules",
    "**/*dist/**/*",
    "**/*.test.js"
  ],
  "include": [ "./source**/*" ]
}
