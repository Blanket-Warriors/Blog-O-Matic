{
  "name": "blog-o-matic",
  "version": "3.0.0",
  "description": "Human Source => Useful Static Files",
  "author": "Ben Pevsner",
  "engine": "node >= 4.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blanket-warriors/blog-o-matic.git"
  },
  "main": "dist/index.js",
  "bin": {
    "blog-o-matic": "./bin/blog-o-matic"
  },
  "scripts": {
    "start": "npm run build:commonjs -- --watch",
    "build": "run-p build:* --aggregate-output",
    "build:commonjs": "tsc -p 'tsconfig.json' --outDir 'dist' --module 'commonjs'",
    "build:iife": "rollup -c ./rollup.config.js",
    "example": "npm run build && node dist/index.js --in=./example",
    "test": "run-p --aggregate-output test:lint test:unit",
    "test:coverage": "npm run test:unit -- --coverage",
    "test:lint": "tslint --project ./tsconfig.json",
    "test:unit": "jest --colors",
    "prepublish": "npm run build"
  },
  "dependencies": {
    "sharp": "^0.20.5",
    "yargs": "^12.0.1"
  },
  "devDependencies": {
    "@types/jest": "^23.1.4",
    "@types/sharp": "^0.17.9",
    "@types/yargs": "^11.1.0",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.3.0",
    "jest-cli": "^23.3.0",
    "npm-run-all": "^4.1.3",
    "rollup": "^0.62.0",
    "rollup-plugin-typescript2": "^0.15.1",
    "ts-jest": "^23.0.0",
    "tslint": "^5.10.0",
    "tslint-eslint-rules": "^5.3.1",
    "typescript": "^2.9.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:lint",
      "pre-push": "npm-run-all test:lint build",
      "pre-publish": "npm-run-all test build"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "./**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules",
      "dist",
      ".d.ts$"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "transform": {
      "^.+\\.(j|t)s$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  }
}
