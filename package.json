{
  "name": "blog-o-matic",
  "version": "3.0.1",
  "description": "Human Source => Useful Static Files",
  "author": "Ben Pevsner",
  "engine": "node >= 4.0.0",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": "git+https://github.com/ivebencrazy/blog-o-matic.git",
  "bin": {
    "blog-o-matic": "./bin/blog-o-matic"
  },
  "scripts": {
    "build": "tsc -p 'tsconfig.json' --outDir 'dist'",
    "prepublishOnly": "npm install && npm test && npm run build",
    "start": "npm run build -- --watch",
    "test": "run-p --aggregate-output test:lint test:unit",
    "test:coverage": "jest --colors --coverage --silent",
    "test:lint": "tslint --project ./tsconfig.json",
    "test:unit": "jest --colors --silent"
  },
  "dependencies": {
    "sharp": "^0.20.5",
    "yargs": "^12.0.1"
  },
  "devDependencies": {
    "@types/jest": "^23.1.4",
    "@types/sharp": "^0.17.9",
    "@types/yargs": "^11.1.0",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.3.0",
    "jest-cli": "^23.3.0",
    "npm-run-all": "^4.1.3",
    "ts-jest": "^23.0.0",
    "tslint": "^5.10.0",
    "tslint-eslint-rules": "^5.3.1",
    "typescript": "^2.9.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:lint",
      "pre-push": "npm-run-all test:lint build",
      "pre-publish": "npm-run-all test build"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "./**/*.ts"
    ],
    "coverageDirectory": "./coverage",
    "coveragePathIgnorePatterns": [
      "node_modules",
      "dist",
      ".d.ts$"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "transform": {
      "^.+\\.(j|t)s$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  }
}
