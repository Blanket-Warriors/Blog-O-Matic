{
  "name": "blog-o-matic",
  "version": "4.0.0",
  "description": "Human Source => Useful Static Files",
  "author": "Ben Pevsner",
  "license": "MIT",
  "repository": "git+https://github.com/ivebencrazy/blog-o-matic.git",
  "bugs": "https://github.com/ivebencrazy/blog-o-matic/issues",
  "homepage": "https://github.com/ivebencrazy/blog-o-matic#readme",
  "scripts": {
    "build": "lerna run build",
    "default": "lerna bootstrap --ci && npm run build && npm run test:lint && npm run test:ci",
    "prepublishOnly": "npm install && npm test && npm run build",
    "prestart": "lerna run link",
    "start": "lerna run start --parallel",
    "test": "run-p --aggregate-output test:lint test:unit",
    "test:coverage": "npm run test:unit -- --coverage",
    "test:ci": "jest --ci --maxWorkers=1",
    "test:lint": "tslint --project ./tsconfig.json",
    "test:unit": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "react": "^16.6.3"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/inquirer": "0.0.43",
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.12",
    "@types/react": "^16.7.13",
    "@types/react-dom": "^16.0.11",
    "@types/sharp": "^0.21.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "enzyme-to-json": "^3.3.5",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "lerna": "^3.5.1",
    "npm-run-all": "^4.1.3",
    "raf": "^3.4.1",
    "react-dom": "^16.6.3",
    "react-test-renderer": "^16.6.3",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:lint",
      "pre-push": "npm-run-all test:lint build",
      "pre-publish": "npm-run-all test build"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "./**/*.ts"
    ],
    "coverageDirectory": "./coverage",
    "coveragePathIgnorePatterns": [
      "node_modules",
      "dist",
      ".d.ts$"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "testURL": "http://localhost/",
    "transform": {
      "^.+\\.(j|t)s$": "ts-jest"
    }
  }
}
