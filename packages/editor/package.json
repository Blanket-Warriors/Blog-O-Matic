{
  "name": "@blog-o-matic/editor",
  "version": "4.0.2",
  "description": "Editor for Blog-o-Matic blogs",
  "author": "Ben Pevsner",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "repository": "git+https://github.com/ivebencrazy/blog-o-matic.git",
  "bugs": "https://github.com/ivebencrazy/blog-o-matic/issues",
  "homepage": "https://github.com/ivebencrazy/blog-o-matic#readme",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "run-s build watch:client start:server",
    "start:client": "(cd ./source/client && npm run start)",
    "start:server": "run-p watch:server serve",
    "build": "run-p build:*",
    "build:client": "(cd ./source/client && npm run build)",
    "build:server": "tsc -p 'tsconfig.json' --outDir 'dist'",
    "serve": "node ./dist/index.js",
    "watch:client": "(cd ./source/client && npm run build -- --watch)",
    "watch:server": "npm run build:server -- --watch"
  },
  "dependencies": {
    "express": "^4.16.4",
    "marksy": "^6.1.0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "typescript": "^3.2.2"
  }
}
